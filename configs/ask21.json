    "com1": {
      "outer-knob": {
        "rotate-clockwise": {
          "description": "Increases the COM1 standby frequency in coarse (1 MHz) increments.",
          "actions": [
            {
              "type": "command",
              "value": "sim/radios/actv_com1_coarse_up"
            }
          ]
        },
        "rotate-counterclockwise": {
          "description": "Decreases the COM1 standby frequency in coarse (1 MHz) increments.",
          "actions": [
            {
              "type": "command",
              "value": "sim/radios/actv_com1_coarse_down"
            }
