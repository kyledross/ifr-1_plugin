  "output": {
    "ap": {
      "conditions": [
        {
          "dataref": "sim/cockpit/autopilot/autopilot_mode",
          "min": 2,
          "max": 2,
          "mode": "solid"
        }
      ]
    },
    "hdg": {
      "conditions": [
        {
          "dataref": "sim/cockpit/autopilot/autopilot_state",
          "bit": 1,
          "mode": "solid"
        }
      ]
    },
    "nav": {
      "conditions": [
        {
          "dataref": "sim/cockpit/autopilot/autopilot_state",
          "bit": 9,
          "mode": "solid"
        }
      ]
    },
    "apr": {
      "conditions": [
        {
          "dataref": "sim/cockpit2/autopilot/approach_status",
          "min": 1,
          "max": 1,
          "mode": "blink"
        },
        {
          "dataref": "sim/cockpit2/autopilot/approach_status",
          "min": 2,
          "max": 2,
          "mode": "solid"
        }
      ]
    },
    "alt": {
