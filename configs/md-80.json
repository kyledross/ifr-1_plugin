{
  "aircraft": [
    "MD80",
    "MD-80"
  ],
  "modes": {
    "com1": {
      "outer-knob": {
        "rotate-clockwise": { "type": "command", "value": "sim/radios/stby_com1_coarse_up" },
        "rotate-counterclockwise": { "type": "command", "value": "sim/radios/stby_com1_coarse_down" }
      },
      "inner-knob": {
        "rotate-clockwise": { "type": "command", "value": "sim/radios/stby_com1_fine_up" },
        "rotate-counterclockwise": { "type": "command", "value": "sim/radios/stby_com1_fine_down" }
      },
      "swap": {
        "short-press": { "type": "command", "value": "sim/radios/com1_standy_flip" }
      }
    },
    "com2": {
      "outer-knob": {
        "rotate-clockwise": { "type": "command", "value": "sim/radios/stby_com2_coarse_up" },
        "rotate-counterclockwise": { "type": "command", "value": "sim/radios/stby_com2_coarse_down" }
      },
      "inner-knob": {
        "rotate-clockwise": { "type": "command", "value": "sim/radios/stby_com2_fine_up" },
        "rotate-counterclockwise": { "type": "command", "value": "sim/radios/stby_com2_fine_down" }
      },
      "swap": {
        "short-press": { "type": "command", "value": "sim/radios/com2_standy_flip" }
      }
    },
    "nav1": {
      "outer-knob": {
        "rotate-clockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav1_frequency_hz", "adjustment": 100, "min": 10800, "max": 11795, "limit-type": "wrap" },
        "rotate-counterclockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav1_frequency_hz", "adjustment": -100, "min": 10800, "max": 11795, "limit-type": "wrap" }
      },
      "inner-knob": {
        "rotate-clockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav1_frequency_hz", "adjustment": 5, "min": 10800, "max": 11795, "limit-type": "wrap" },
        "rotate-counterclockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav1_frequency_hz", "adjustment": -5, "min": 10800, "max": 11795, "limit-type": "wrap" }
      },
      "swap": {
        "short-press": { "type": "command", "value": "sim/radios/nav1_standy_flip" }
      }
    },
    "nav2": {
      "outer-knob": {
        "rotate-clockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav2_frequency_hz", "adjustment": 100, "min": 10800, "max": 11795, "limit-type": "wrap" },
        "rotate-counterclockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav2_frequency_hz", "adjustment": -100, "min": 10800, "max": 11795, "limit-type": "wrap" }
      },
      "inner-knob": {
        "rotate-clockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav2_frequency_hz", "adjustment": 5, "min": 10800, "max": 11795, "limit-type": "wrap" },
        "rotate-counterclockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav2_frequency_hz", "adjustment": -5, "min": 10800, "max": 11795, "limit-type": "wrap" }
      },
      "swap": {
        "short-press": { "type": "command", "value": "sim/radios/nav2_standy_flip" }
      }
    },
    "hdg": {
      "inner-knob-button": { "short-press": { "type": "command", "value": "sim/instruments/heading_sync" } },
      "outer-knob": {
        "rotate-clockwise": { "type": "dataref-adjust", "value": "sim/cockpit/autopilot/heading_mag", "adjustment": 10.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" },
        "rotate-counterclockwise": { "type": "dataref-adjust", "value": "sim/cockpit/autopilot/heading_mag", "adjustment": -10.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" }
      },
      "inner-knob": {
        "rotate-clockwise": { "type": "dataref-adjust", "value": "sim/cockpit/autopilot/heading_mag", "adjustment": 1.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" },
        "rotate-counterclockwise": { "type": "dataref-adjust", "value": "sim/cockpit/autopilot/heading_mag", "adjustment": -1.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" }
      }
    },
    "baro": {
      "inner-knob-button": { "short-press": { "type": "command", "value": "sim/instruments/barometer_2992" } },
      "outer-knob": {
        "rotate-clockwise": { "type": "command", "value": "sim/instruments/barometer_up" },
        "rotate-counterclockwise": { "type": "command", "value": "sim/instruments/barometer_down" }
      },
      "inner-knob": {
        "rotate-clockwise": { "type": "command", "value": "sim/instruments/barometer_up" },
        "rotate-counterclockwise": { "type": "command", "value": "sim/instruments/barometer_down" }
      }
    },
    "crs1": {
      "outer-knob": {
        "rotate-clockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav1_obs_deg_mag_pilot", "adjustment": 10.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" },
        "rotate-counterclockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav1_obs_deg_mag_pilot", "adjustment": -10.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" }
      },
      "inner-knob": {
        "rotate-clockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav1_obs_deg_mag_pilot", "adjustment": 1.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" },
        "rotate-counterclockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav1_obs_deg_mag_pilot", "adjustment": -1.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" }
      }
    },
    "crs2": {
      "outer-knob": {
        "rotate-clockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav2_obs_deg_mag_copilot", "adjustment": 10.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" },
        "rotate-counterclockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav2_obs_deg_mag_copilot", "adjustment": -10.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" }
      },
      "inner-knob": {
        "rotate-clockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav2_obs_deg_mag_copilot", "adjustment": 1.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" },
        "rotate-counterclockwise": { "type": "dataref-adjust", "value": "sim/cockpit2/radios/actuators/nav2_obs_deg_mag_copilot", "adjustment": -1.0, "min": 0.0, "max": 359.0, "limit-type": "wrap" }
      }
    },
    "ap": {
      "outer-knob": {
        "rotate-clockwise": { "type": "command", "value": "sim/autopilot/altitude_up" },
        "rotate-counterclockwise": { "type": "command", "value": "sim/autopilot/altitude_down" }
      },
      "inner-knob": {
        "rotate-clockwise": { "type": "command", "value": "sim/autopilot/vertical_speed_up" },
        "rotate-counterclockwise": { "type": "command", "value": "sim/autopilot/vertical_speed_down" }
      },
      "swap": { "short-press": { "type": "command", "value": "sim/autopilot/flight_level_change" } },
      "ap": { "short-press": { "type": "command", "value": "sim/autopilot/servos_toggle" } },
      "hdg": { "short-press": { "type": "command", "value": "sim/autopilot/heading" } },
      "nav": { "short-press": { "type": "command", "value": "sim/autopilot/NAV" } },
      "apr": { "short-press": { "type": "command", "value": "sim/autopilot/approach" } },
      "alt": { "short-press": { "type": "command", "value": "sim/autopilot/altitude_hold" } },
      "vs": { "short-press": { "type": "command", "value": "sim/autopilot/vertical_speed" } }
    },
    "xpdr": {
      "outer-knob": {
        "rotate-clockwise": {
          "type": "command",
          "value": "sim/transponder/transponder_12_up"
        },
        "rotate-counterclockwise": {
          "type": "command",
          "value": "sim/transponder/transponder_12_down"
        }
      },
      "inner-knob": {
        "rotate-clockwise": {
          "type": "command",
          "value": "sim/transponder/transponder_34_up"
        },
        "rotate-counterclockwise": {
          "type": "command",
          "value": "sim/transponder/transponder_34_down"
        }
      },
      "inner-knob-button": { "short-press": { "type": "command", "value": "sim/transponder/transponder_ident" } }
    },
    "xpdr-mode": {
      "inner-knob": {
        "rotate-clockwise": { "type": "command", "value": "sim/transponder/transponder_up" },
        "rotate-counterclockwise": { "type": "command", "value": "sim/transponder/transponder_dn" }
      }
    }
  },
  "output": {
    "ap": { "conditions": [ { "dataref": "sim/cockpit/autopilot/autopilot_mode", "min": 2, "max": 2, "mode": "solid" } ] },
    "hdg": { "conditions": [ { "dataref": "sim/cockpit/autopilot/autopilot_state", "bit": 1, "mode": "solid" } ] },
    "nav": { "conditions": [ { "dataref": "sim/cockpit/autopilot/autopilot_state", "bit": 9, "mode": "solid" } ] },
    "apr": { "conditions": [ { "dataref": "sim/cockpit2/autopilot/approach_status", "min": 1, "max": 100, "mode": "solid" } ] },
    "alt": { "conditions": [ { "dataref": "sim/cockpit2/autopilot/altitude_mode", "min": 6, "max": 6, "mode": "solid" }, { "dataref": "sim/cockpit2/autopilot/altitude_mode", "min": 5, "max": 5, "mode": "blink" } ] },
    "vs": { "conditions": [ { "dataref": "sim/cockpit2/autopilot/altitude_mode", "min": 4, "max": 4, "mode": "solid" } ] }
  }
}
